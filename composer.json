{
  "name": "blaze-commerce/blocksy-child-theme",
  "description": "A WordPress child theme for Blocksy by BlazeCommerce with comprehensive testing infrastructure",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "BlazeCommerce",
      "email": "hello@blazecommerce.io"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "wp-phpunit/wp-phpunit": "^6.4",
    "yoast/phpunit-polyfills": "^2.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "vimeo/psalm": "^5.0",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "test:coverage": "phpunit --coverage-html coverage/php --coverage-text",
    "lint": "phpcs --standard=WordPress --ignore=vendor/,node_modules/,tests/,coverage/ .",
    "lint:fix": "phpcbf --standard=WordPress --ignore=vendor/,node_modules/,tests/,coverage/ .",
    "psalm": "psalm --show-info=false",
    "install-wp-tests": "bash bin/install-wp-tests.sh wordpress_test root root localhost latest",
    "setup-tests": [
      "@install-wp-tests",
      "mkdir -p tests/unit tests/integration tests/fixtures coverage"
    ]
  },
  "autoload": {
    "psr-4": {
      "BlazeCommerce\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BlazeCommerce\\Tests\\": "tests/"
    }
  }
}
