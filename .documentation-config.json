{
  "enforcement": {
    "enabled": true,
    "blockCommitsWithoutDocs": true,
    "autoGenerateTemplates": true,
    "priority": 2,
    "strictMode": false,
    "warnOnly": false
  },
  "directories": {
    "source": [
      "src/",
      "lib/",
      "components/",
      "modules/",
      "services/",
      "utils/",
      "helpers/",
      "assets/js/",
      "includes/",
      "templates/"
    ],
    "api": [
      "routes/",
      "controllers/",
      "api/",
      "endpoints/",
      "rest-api/",
      "graphql/"
    ],
    "config": [
      "config/",
      "settings/",
      ".env*",
      "docker*",
      "package.json",
      "composer.json",
      "webpack.config.js",
      "vite.config.js",
      "tailwind.config.js"
    ],
    "database": [
      "migrations/",
      "models/",
      "schemas/",
      "database/",
      "sql/",
      "seeds/"
    ],
    "docs": "docs/",
    "templates": "docs/templates/"
  },
  "fileTypes": {
    "requireDocs": [
      ".js",
      ".ts",
      ".jsx",
      ".tsx",
      ".php",
      ".py",
      ".rb",
      ".go",
      ".rs",
      ".java",
      ".kt",
      ".swift",
      ".vue",
      ".svelte"
    ],
    "configFiles": [
      ".json",
      ".yml",
      ".yaml",
      ".toml",
      ".ini",
      ".env",
      ".config.js",
      ".config.ts"
    ],
    "ignore": [
      ".test.js",
      ".spec.js",
      ".test.ts",
      ".spec.ts",
      ".min.js",
      ".min.css",
      ".d.ts",
      ".map",
      "node_modules/",
      "vendor/",
      "dist/",
      "build/",
      "coverage/"
    ]
  },
  "documentation": {
    "minWordCount": 50,
    "maxTodoCount": 5,
    "requiredSections": [
      "Overview",
      "Usage",
      "Examples"
    ],
    "optionalSections": [
      "Configuration",
      "API Reference",
      "Troubleshooting",
      "Testing",
      "Performance",
      "Security"
    ],
    "autoGenerate": {
      "extractComments": true,
      "extractFunctionSignatures": true,
      "extractClassDefinitions": true,
      "extractApiEndpoints": true,
      "extractImports": true,
      "extractExports": true
    },
    "quality": {
      "checkSpelling": false,
      "checkGrammar": false,
      "requireCodeExamples": true,
      "requireUsageInstructions": true
    }
  },
  "templates": {
    "feature": "feature-template.md",
    "api": "api-template.md",
    "component": "component-template.md",
    "configuration": "configuration-template.md",
    "database": "database-template.md",
    "utility": "utility-template.md",
    "service": "service-template.md"
  },
  "patterns": {
    "newFeature": {
      "description": "Detect new feature implementations",
      "patterns": [
        "new file in source directories",
        "significant additions to existing files",
        "new public functions or classes"
      ]
    },
    "apiChanges": {
      "description": "Detect API modifications",
      "patterns": [
        "new routes or endpoints",
        "modified request/response structures",
        "new API controllers"
      ]
    },
    "configChanges": {
      "description": "Detect configuration changes",
      "patterns": [
        "new environment variables",
        "modified configuration files",
        "new build or deployment settings"
      ]
    },
    "databaseChanges": {
      "description": "Detect database modifications",
      "patterns": [
        "new migration files",
        "modified database models",
        "new database schemas"
      ]
    }
  },
  "integration": {
    "jira": {
      "enabled": false,
      "requireTicketReference": false,
      "ticketPattern": "[A-Z]+-\\d+",
      "linkDocumentationToTickets": true
    },
    "github": {
      "enabled": true,
      "requireIssueReference": false,
      "issuePattern": "#\\d+",
      "linkDocumentationToIssues": true
    },
    "confluence": {
      "enabled": false,
      "spaceKey": "",
      "syncDocumentation": false
    },
    "wiki": {
      "enabled": false,
      "syncToWiki": false,
      "wikiPath": "wiki/"
    }
  },
  "notifications": {
    "onDocumentationGenerated": {
      "showFiles": true,
      "showInstructions": true,
      "showExamples": false
    },
    "onDocumentationMissing": {
      "showRequirements": true,
      "showSuggestions": true,
      "showTemplates": true
    },
    "onQualityIssues": {
      "showDetails": true,
      "showImprovements": true
    }
  },
  "automation": {
    "autoStageGenerated": true,
    "autoCommitTemplates": false,
    "createPullRequestComments": false,
    "updateReadme": false,
    "generateTableOfContents": false
  },
  "customRules": {
    "wordpress": {
      "enabled": true,
      "requireHookDocumentation": true,
      "requireFilterDocumentation": true,
      "requireShortcodeDocumentation": true,
      "phpDocBlocks": true
    },
    "react": {
      "enabled": false,
      "requirePropTypes": false,
      "requireStorybook": false,
      "requireTestDocumentation": false
    },
    "api": {
      "enabled": true,
      "requireOpenApiSpec": false,
      "requirePostmanCollection": false,
      "requireExampleRequests": true
    }
  },
  "emergencyBypass": {
    "enabled": true,
    "environmentVariable": "EMERGENCY_BYPASS",
    "requireJustification": true,
    "logBypass": true,
    "notifyTeam": false
  }
}
