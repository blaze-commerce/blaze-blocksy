# BlazeCommerce Testing Environment Variables
# 
# Copy this file to .env and fill in the actual values
# DO NOT commit .env file to version control
#
# @package BlazeCommerce\Tests

# =============================================================================
# API TESTING CONFIGURATION
# =============================================================================

# Base URL for API testing (replace with your site URL)
# Example: https://your-wordpress-site.com
API_BASE_URL=https://your-wordpress-site.com

# =============================================================================
# WOOCOMMERCE REST API CREDENTIALS
# =============================================================================

# WooCommerce Consumer Key (starts with ck_)
# Generate at: WooCommerce → Settings → Advanced → REST API
WC_CONSUMER_KEY=ck_your_consumer_key_here

# WooCommerce Consumer Secret (starts with cs_)
# Generate at: WooCommerce → Settings → Advanced → REST API
WC_CONSUMER_SECRET=cs_your_consumer_secret_here

# =============================================================================
# TEST USER CREDENTIALS
# =============================================================================

# Test user email for authentication tests
TEST_USER_EMAIL=test@example.com

# Test user password for authentication tests
TEST_USER_PASSWORD=test-password

# =============================================================================
# SECURITY TESTING CONFIGURATION
# =============================================================================

# Enable vulnerability scanning (true/false)
ENABLE_VULNERABILITY_SCAN=false

# Security baseline file path
SECURITY_BASELINE_PATH=tests/security/security-baseline.json

# =============================================================================
# PERFORMANCE TESTING CONFIGURATION
# =============================================================================

# Performance baseline file path
PERFORMANCE_BASELINE_PATH=tests/performance/performance-baseline.json

# Lighthouse testing (requires lighthouse CLI)
ENABLE_LIGHTHOUSE_TESTS=false

# =============================================================================
# DATABASE TESTING CONFIGURATION
# =============================================================================

# Database host for testing
DB_HOST=localhost

# Database user for testing (e.g., root, wordpress_user)
DB_USER=[REPLACE_WITH_DB_USER]

# Database password for testing (leave empty if no password)
DB_PASSWORD=[REPLACE_WITH_DB_PASSWORD]

# Database port for testing
DB_PORT=3306

# Test database name
TEST_DB_NAME=blaze_commerce_test

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# CI environment flag
CI=false

# Test timeout in milliseconds
TEST_TIMEOUT=30000

# Maximum test retries
MAX_TEST_RETRIES=3

# =============================================================================
# DEBUGGING CONFIGURATION
# =============================================================================

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Test output verbosity
VERBOSE=false
